<aura:component description="merItem" implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:registerEvent name = "addItemCart" type="c:changeMerchEvent"/>
    <aura:attribute name='item' type='Merchandise__c' required='true'/>
    <lightning:card title="{!v.item.Name}" iconName="standard:scan_card">

        <p>
            <ui:outputRichText value="{!v.item.Picture__c}"></ui:outputRichText>
            Name : {!v.item.Name},
        </p>
        <p>Category : {!v.item.Category__c},
        </p>
        <p>Description : {!v.item.Description__c},
        </p>
        <p>
            Price: <lightning:formattedNumber  value="{!v.item.Price__c}" style="currency"/>
        </p>
        <p>
            Quantity: <lightning:formattedNumber  value="{!v.item.Quantity__c}"/>

            <lightning:input aura:id="quantityBuy" type="number" name="myNumber"
                             label="Quantity to buy:" value="1" />

        </p>
        <div>
            <lightning:button label="Add to cart !!!"
                              onclick="{!c.toCart}"
                              disabled="false"/><!--onclick="{!c.packItem}" -->
        </div>
    </lightning:card>

</aura:component>